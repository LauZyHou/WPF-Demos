<Window x:Class="WPF_Demos.property.DependencyProperty1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demos.property"
        mc:Ignorable="d"
        Title="DependencyProperty1" Height="135" Width="260">
    <StackPanel>
        <!--在textBox1这里输入值，然后值会传到绑定的Studnet对象的Name上-->
        <TextBox x:Name="textBox1" BorderBrush="Black" Margin="5"/>
        <!--同时还传给绑定的textBox2上-->
        <TextBox x:Name="textBox2" BorderBrush="Black" Margin="5"/>
        <Button Content="ok" Margin="5" Click="Button_Click"/>
    </StackPanel>
</Window>
