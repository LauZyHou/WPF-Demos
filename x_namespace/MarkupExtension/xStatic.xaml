<Window x:Class="WPF_Demos.x_namespace.xStatic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demos.x_namespace"
        mc:Ignorable="d"
        Title="{x:Static local:xStatic.ShowText}" Height="450" Width="800">
    <StackPanel>
        <TextBox FontSize="32" Text="{x:Static local:xStatic.ShowText}"/>
    </StackPanel>
</Window>
